{
  "env": {
    "ENABLE_EXPERIMENTAL_MCP_CLI": "true"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -ExecutionPolicy Bypass -File .claude/hooks/post-edit-lint.ps1 2>/dev/null || true"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*input.*|.*keyboard.*|.*attention.*|.*captcha.*|.*blocked.*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/shout-alert.sh 'Claude Needs Input' 'Check browser automation' true"
          }
        ]
      }
    ]
  }
}
